/* USER CODE BEGIN EV */


extern uint8_t FLAG_SentKEY0 ;
extern uint8_t FLAG_SentKEY1 ;
extern uint8_t FLAG_SentKEY2 ;
extern uint8_t FLAG_SentKEY3 ;
extern uint32_t CNT_TIMER2;
extern typedef struct {
    uint32_t hours;
    uint32_t minutes;
    uint32_t seconds;
} TimeTypedef;
extern TimeTypedef Time;

void convertSecondsToTime(uint32_t total_seconds, TimeTypedef* time)
{
    time->hours = total_seconds / 3600;
    total_seconds %= 3600;
    time->minutes = total_seconds / 60;
    time->seconds = total_seconds % 60;
}

