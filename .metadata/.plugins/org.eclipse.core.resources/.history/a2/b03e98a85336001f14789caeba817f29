#ifndef AT_WIFI_H
#define AT_WIFI_H

#include "stm32f1xx_hal.h"
#include <string.h>
#include "main.h"

extern UART_HandleTypeDef *AT_huart;

// Structure to hold AT commands
typedef struct {
    char *reset;
    char *setModeAP;
    char *setIP;
    char *setModeStation;
    char *setSoftAP;
    char *connectWiFi;
    char *checkWiFi;
    char *getIP;
    char *enableMUX;
    char *startServer;
    char *stopServer;
    char *listAPs;
    char *restoreDefaults;
} AT_Commands;

extern AT_Commands atCommands;

// Function prototype for sending command and receiving response
void ESP_SendCommand(const char *command);

// Function prototype for sending data with multiple variables
void ESP_SendTCP(uint8_t con_num, char *data);

// Function prototype for initializing UART with specified handle
void ESP_UART_Init(UART_HandleTypeDef *huart);

#endif // AT_WIFI_H
