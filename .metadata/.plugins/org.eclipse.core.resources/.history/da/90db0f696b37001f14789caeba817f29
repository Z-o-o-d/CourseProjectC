typedef struct {
    TIM_HandleTypeDef *htim;
    uint32_t channel;
    uint32_t frequency;
    uint8_t volume;
} BuzzerTypeDef;

typedef struct {
    uint16_t frequency;
    uint16_t duration;
} Note;

void Buzzer_Init(BuzzerTypeDef *buzzer);
